# Top-level EditorConfig settings
#
# This file gets placed with GNU stow and will be used if no project-specific
# configuration file exists.

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{html,js,ts,json,css,scss,yaml,yml}]
indent_size = 2

[*.{lisp,asd,el}]
indent_size = none
tab_width = none

[Makefile]
indent_style = tab

[*.pkr.hcl]
indent_size = 2
